<body>
  <div class="card" role="main">
    <h1>Create your account</h1>
    <form id="signup">
      <label for="user">Username</label>
      <input id="user" name="user" type="text" required autocomplete="username" placeholder="pick a username" />

      <label for="pass">Password</label>
      <input id="pass" name="pass" type="password" required autocomplete="new-password" placeholder="choose a password" />

      <button type="submit">Done</button>
      <div class="small">By clicking <strong>Done</strong> you agree to our totally normal terms and conditions.</div>
    </form>
  </div>

  <!-- Overlay (hidden until form submit) -->
  <div id="overlay" class="overlay" aria-hidden="true">
    <div class="overlay-content" role="dialog" aria-modal="true" aria-label="Important video">
      <div class="video-wrap">
        <!-- Classic Rickroll (YouTube embed) -->
        <iframe id="rick" src="about:blank" allow="autoplay; encrypted-media; picture-in-picture" allowfullscreen title="Rick Astley - Never Gonna Give You Up"></iframe>
      </div>
      <div class="side">
        <div style="font-size:16px;color:#cfe6ff;font-weight:700">Thanks for signing up!</div>
        <div class="big-red" id="wasted">LOL WASTED YOUR TIME</div>
        <button id="close" class="close-btn">Close</button>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('signup');
    const overlay = document.getElementById('overlay');
    const iframe = document.getElementById('rick');
    const closeBtn = document.getElementById('close');

    // YouTube video ID for Never Gonna Give You Up
    const videoId = 'dQw4w9WgXcQ';

    form.addEventListener('submit', event => {
      event.preventDefault();
      // (Optional) You could validate or store username/password here.
      // Show overlay and load video with autoplay. Using a user gesture (button click) helps autoplay work in most browsers.
      iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1`;
      overlay.classList.add('show');
      overlay.setAttribute('aria-hidden','false');
    });

    closeBtn.addEventListener('click', () => {
      // stop the video by clearing src
      iframe.src = 'about:blank';
      overlay.classList.remove('show');
      overlay.setAttribute('aria-hidden','true');
    });

    // allow clicking outside content to close
    overlay.addEventListener('click', (e)=>{
      if(e.target === overlay){
        closeBtn.click();
      }
    });
  </script>
